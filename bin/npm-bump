#!/usr/bin/env node

'use strict';

const args = require('minimist')(process.argv.slice(2), {
    '--branch': '-b',
    '--remote': '-r',
    '--release-type': '-t'
});

try {
    require('../lib/cli').custom(args.r, args.b)(args.t, args['ignore-npm']);
} catch (error) {
    if (error.name === 'UsageError') {
        console.error(error.message);
    } else {
        throw error;
    }
}
